apiVersion: v1
kind: Service
metadata:
  name: my-nodeport-service
spec:
  selector:
    app: nginx
  ports:
    - port: 80
      targetPort: 8080
      nodePort: 30036     # Optional: if not specified, one will be auto-assigned (range: 30000â€“32767)
  type: NodePort

apiVersion: v1
kind: Service
metadata:
  name: my-loadbalancer-service
spec:
  selector:
    app: nginx
  ports:
    - port: 80
      targetPort: 8080
  type: LoadBalancer
