apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-nginx-deployment   # Name of the Deployment
spec:
  replicas: 3                 # Number of Pod replicas (desired state)
  selector:
    matchLabels:
      app: nginx              # Deployment manages Pods with this label
  template:
    metadata:
      labels:
        app: nginx            # Labels added to the Pods
    spec:
      containers:
      - name: nginx           # Container name
        image: nginx:1.21     # Docker image version
        ports:
        - containerPort: 80   # Container port exposed

apiVersion: v1
kind: Service
metadata:
  name: my-loadbalancer-service
spec:
  selector:
    app: nginx
  ports:
    - port: 80
      targetPort: 8080
  type: LoadBalancer
